server {
        listen 80;
        server_name {{ application_hostname }};

        location / {
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $remote_addr;
        proxy_pass http://127.0.0.1:{{application_port}}$request_uri;
        }
}
