{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "paths": {
      "testData": [
        "common/__tests__/data/index.ts"
      ],
      "test-utils": [
        "./common/__tests__/utils/index.ts"
      ],
      "client/*": [
        "client/*"
      ],
      "server/*": [
        "server/*"
      ]
    },
    "types": [
      "mocha",
      "node"
    ]
  },
  "include": [
    "src",
    "tests"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
